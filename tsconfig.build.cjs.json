{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "target": "es2018",
    "declaration": false,
    "sourceMap": false,
    "importHelpers": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["src/index.d.ts", "node_modules", "unpackage", "src/**/*.nvue"]
}
